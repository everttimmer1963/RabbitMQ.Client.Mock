<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Nullable>enable</Nullable>
    <Version>1.0.2</Version>
    <Authors>Bonensoep1963</Authors>
    <Description>RabbitMQ.Client mocking library that enables users to mock the behaviour of RabbitMQ in unit tests.</Description>
    <Copyright>Copyright (c) Bonensoep1963 2025</Copyright>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/everttimmer1963/RabbitMQ.Client.Mock</RepositoryUrl>
    <PackageTags>RabbitMQ;Fakes;Mock;UnitTests</PackageTags>
    <PackageReleaseNotes>Initial upload</PackageReleaseNotes>
    <PackageLicenceExpression>GPL-3.0-or-later</PackageLicenceExpression>
    <PackageLicenseFile>licence.txt</PackageLicenseFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Rabbit-128.png" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\licence.txt" Link="licence.txt">
      <PackagePath>\</PackagePath>
      <Pack>True</Pack>
    </None>
    <None Include="..\Rabbit-128.png" Link="Rabbit-128.png">
      <PackagePath>\</PackagePath>
      <Pack>True</Pack>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="RabbitMQ.Client" Version="7.1.2" />
  </ItemGroup>

</Project>
